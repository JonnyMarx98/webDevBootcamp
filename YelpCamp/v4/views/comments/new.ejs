<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Add New Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <!-- Name -->
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Author" name="comment[author]" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="text" name="comment[text]" id="">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds" class="btn btn-sm btn-primary">Go Back</a>  
        </div>
        

    </div>
    
</div>



<% include ../partials/footer %>