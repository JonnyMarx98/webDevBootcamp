<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to WogCamp!</h1>
            <p>view our amazing campgrounds from all over the world.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Create New Campground</a>
            </p>
        </div>
    </header> 

    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
        <% campgrounds.forEach((campground) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <a href="/campgrounds/<%= campground._id %>">
                        <img src="<%= campground.image %>" alt="">
                    </a>
                    <div class="caption">
                        <h3><%= campground.name %></h3>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
            
        <% }) %>
    </div>

    <a class="btn btn-primary btn-lg" href="/">Home Page</a>

</div>

<% include ../partials/footer %>